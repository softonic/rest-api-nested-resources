{
  "name": "softonic/rest-api-nested-resources",
  "type": "library",
  "description" : "Utilities to work with REST APIs with nested resources",
  "keywords": [],
  "license": "Apache-2.0",
  "homepage": "https://github.com/softonic/rest-api-nested-resources",
  "support": {
    "issues": "https://github.com/softonic/rest-api-nested-resources/issues"
  },
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "laravel/framework": "^11.0",
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "^11.0",
    "rector/rector": "^1.0",
    "squizlabs/php_codesniffer": "^3"
  },
  "autoload": {
    "psr-4": {
      "Softonic\\RestApiNestedResources\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Softonic\\RestApiNestedResources\\": "tests/"
    }
  },
  "scripts": {
    "tests": [
      "@checkstyle",
      "@phpunit"
    ],
    "phpunit": "phpunit",
    "checkstyle": [
      "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix -v --diff --allow-risky=yes",
      "rector process"
    ],
    "fix-checkstyle": [
      "@php-cs-fixer",
      "@rector"
    ],
    "php-cs-fixer": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix -v --diff --allow-risky=yes",
    "rector": "rector process"
  }
}
